{
  "openapi": "3.0.1",
  "info": {
    "title": "Risk Assessment API",
    "description": "API for AI-powered risk assessment and compliance checks",
    "version": "1.0.0"
  },
  "paths": {
    "/assess-risk": {
      "post": {
        "description": "Perform comprehensive risk assessment using AI",
        "parameters": [
          {
            "name": "entity_data",
            "in": "query",
            "description": "Entity data for risk assessment",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "risk_type",
            "in": "query",
            "description": "Type of risk assessment to perform",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["comprehensive", "financial", "operational", "compliance", "fraud"],
              "default": "comprehensive"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Risk assessment completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "risk_assessment": {
                      "type": "string",
                      "description": "Detailed risk assessment results"
                    },
                    "overall_risk_rating": {
                      "type": "string",
                      "enum": ["Low", "Medium", "High"],
                      "description": "Overall risk rating"
                    },
                    "key_risk_areas": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "Key areas requiring attention"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
