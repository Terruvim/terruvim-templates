{
  "openapi": "3.0.1",
  "info": {
    "title": "Compliance Monitoring API",
    "description": "API for AI-powered compliance monitoring and regulatory checks",
    "version": "1.0.0"
  },
  "paths": {
    "/monitor-compliance": {
      "post": {
        "description": "Monitor regulatory compliance using AI",
        "parameters": [
          {
            "name": "compliance_data",
            "in": "query",
            "description": "Compliance data for monitoring",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "regulation_type",
            "in": "query",
            "description": "Type of regulation to check",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["SOX", "GDPR", "IFRS", "SEC", "general"],
              "default": "general"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Compliance monitoring completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "compliance_assessment": {
                      "type": "string",
                      "description": "Detailed compliance assessment results"
                    },
                    "compliance_status": {
                      "type": "string",
                      "enum": ["Compliant", "Non-Compliant", "Partially Compliant"],
                      "description": "Overall compliance status"
                    },
                    "non_compliance_issues": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "Identified non-compliance issues"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
